              <label for="email">Your email address:</label>
              <input type="email" name="_replyto" class="form-control" placeholder="elon.musk@gmail.com" required>
            </div>
            <div class="form-group">
              <label for="body">Your message:</label>
              <textarea name="body" class="form-control" rows="4" placeholder="Dear Charlie..." required></textarea>
            </div>
            <button class="btn connect-btn btn-block" class="form-control">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

